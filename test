<script>
  // Header shadow
  const headerEl = document.querySelector('header');
  const onScroll = () => {
    if (window.scrollY > 4) headerEl.classList.add('scrolled');
    else headerEl.classList.remove('scrolled');
  };
  window.addEventListener('scroll', onScroll, { passive:true });
  onScroll();

  /* ===== Helpers dates (LOCAL) ===== */
  const fmtYMD = d => `${d.getFullYear()}-${String(d.getMonth()+1).padStart(2,'0')}-${String(d.getDate()).padStart(2,'0')}`;
  const parseISO = s => new Date(s + 'T00:00:00');
  const iso = d => fmtYMD(d);
  const isPast = d => { const t=new Date();t.setHours(0,0,0,0); return d<t; };
  const nightsBetween=(s,e)=>Math.round((e-s)/(1000*60*60*24));

  /* ===== Tarifs (selon dates) ===== */
  const CLEANING_FEE = 60;

  function rateForNight(d){
    const m = d.getMonth() + 1; // 1..12
    if (m === 7 || m === 8) return 100;
    if (m === 6 || m === 9) return 90;
    return 75;
  }

  function requiredMinNightsForStay(startDate, endDate){
    const d = new Date(startDate);
    while (d < endDate) {
      const m = d.getMonth() + 1;
      if (m === 6 || m === 7 || m === 8 || m === 9) return 7;
      d.setDate(d.getDate() + 1);
    }
    return 5;
  }

  function lodgingTotal(startDate, endDate){
    let total = 0;
    let nights = 0;
    const d = new Date(startDate);
    while (d < endDate) {
      total += rateForNight(d);
      nights += 1;
      d.setDate(d.getDate() + 1);
    }
    return { total, nights };
  }

  /* ==========================================================
     ‚úÖ SYNCHRO DISPOS AVEC LA PAGE PRIV√âE (index)
     - localStorage key identique √† l'admin
     - "unavailable" => rouge + d√©sactiv√©
     - "available"   => vert
     ========================================================== */
  const STORAGE_KEY = "lescistes_availability_v1";

  function loadAvail(){
    try{
      return JSON.parse(localStorage.getItem(STORAGE_KEY) || "{}") || {};
    }catch{
      return {};
    }
  }

  function buildBlockedFromAvail(availObj){
    return Object.keys(availObj).filter(d => availObj[d] === "unavailable");
  }

  let avail = loadAvail();
  let blockedDates = buildBlockedFromAvail(avail);
  let blockedSet = new Set(blockedDates);

  // Interdit de traverser les bloqu√©es (exclut le jour de d√©part)
  function crossesBlocked(startISO,endISO){
    let d=parseISO(startISO), end=parseISO(endISO);
    end.setDate(end.getDate()-1);
    while(d<=end){
      if(blockedSet.has(iso(d))) return true;
      d.setDate(d.getDate()+1);
    }
    return false;
  }

  // UI refs (r√©servation)
  const arriveeInput=document.getElementById('arrivee');
  const departInput=document.getElementById('depart');
  const arriveeTip=document.getElementById('arriveeTip');
  const departTip=document.getElementById('departTip');
  const priceCard=document.getElementById('priceCard');
  const priceAmount=document.getElementById('priceAmount');
  const priceDetails=document.getElementById('priceDetails');
  const nightsPill=document.getElementById('nightsPill');

  // Prix anim√©
  function animatePrice(from,to){
    const duration=650,start=performance.now();
    function step(t){
      const p=Math.min(1,(t-start)/duration);
      const eased=1-Math.pow(1-p,3);
      const val=Math.round(from+(to-from)*eased);
      priceAmount.innerHTML=`${val} <small>‚Ç¨</small>`;
      if(p<1)requestAnimationFrame(step);
    }
    requestAnimationFrame(step);
  }

  function showPrice(nights,s,e){
    const calc = lodgingTotal(s, e);
    const lodging = calc.total;
    const total = lodging + CLEANING_FEE;

    nightsPill.textContent=`üõèÔ∏è ${nights} nuit${nights>1?'s':''}`;
    const fromVal=parseInt(priceAmount.textContent)||0;
    priceCard.classList.add('show');
    animatePrice(fromVal,total);

    const fmt=new Intl.DateTimeFormat('fr-FR',{day:'2-digit',month:'long',year:'numeric'});
    const avg = lodging / Math.max(1, nights);

    priceDetails.innerHTML =
      `${fmt.format(s)} ‚Üí ${fmt.format(e)}<br>` +
      `H√©bergement : <strong>${lodging.toFixed(0)} ‚Ç¨</strong> ¬∑ (~${avg.toFixed(0)} ‚Ç¨/nuit)<br>` +
      `Forfait m√©nage : <strong>${CLEANING_FEE} ‚Ç¨</strong><br>` +
      `<strong>Total : ${total.toFixed(0)} ‚Ç¨</strong><br>` +
      `<span style="opacity:.88;font-size:.92rem">Taxe de s√©jour : 1,86 ‚Ç¨/adulte/nuit√©e √† partir de janvier 2026.</span>`;
  }

  function hidePrice(){ priceCard.classList.remove('show'); }

  // Calendrier
  const calendarInputHost=document.createElement('input');
  document.getElementById('calendar').appendChild(calendarInputHost);

  let fpInstance = null;

  function initOrReinitCalendar(){
    avail = loadAvail();
    blockedDates = buildBlockedFromAvail(avail);
    blockedSet = new Set(blockedDates);

    if(fpInstance){
      fpInstance.destroy();
      fpInstance = null;
    }

    fpInstance = flatpickr(calendarInputHost,{
      locale:'fr',
      mode:'range',
      inline:true,
      showMonths:2,
      minDate:'today',
      dateFormat:'Y-m-d',
      disable: blockedDates,

      onDayCreate(dObj,dStr,fp,dayElem){
        const dISO=iso(dayElem.dateObj);

        if(blockedSet.has(dISO)){
          dayElem.classList.add('blocked');
          return;
        }

        if(avail[dISO] === 'available'
           && !dayElem.classList.contains('flatpickr-disabled')
           && !isPast(dayElem.dateObj)){
          dayElem.classList.add('available');
        }
      },

      onChange(selected){
        arriveeTip.textContent=''; departTip.textContent=''; hidePrice();

        if(!selected.length){
          arriveeInput.value=''; departInput.value='';
          return;
        }
        if(selected.length===1){
          const s=selected[0];
          arriveeInput.value=iso(s);
          departInput.value='';
          return;
        }

        let s=selected[0], e=selected[1];
        if(e<s)[s,e]=[e,s];

        arriveeInput.value=iso(s);
        departInput.value=iso(e);

        const nights=nightsBetween(s,e);
        const required = requiredMinNightsForStay(s, e);

        if(nights<required){
          departTip.textContent=`S√©jour minimum : ${required} nuits.`;
          return;
        }
        if(crossesBlocked(iso(s),iso(e))){
          departTip.textContent='La p√©riode choisie traverse des dates indisponibles.';
          return;
        }

        showPrice(nights,s,e);
      }
    });
  }

  initOrReinitCalendar();

  // Mise √† jour auto si les dispos changent dans un autre onglet
  window.addEventListener('storage', (e)=>{
    if(e.key === STORAGE_KEY){
      initOrReinitCalendar();
    }
  });

  /* ‚úÖ ENVOI PAR MAILTO (d√©taill√©) */
  const DEST_EMAIL = "daprevot84@gmail.com "; // <-- mets ton email ici

  function euro(n){
    if (typeof n !== "number" || !isFinite(n)) return "";
    return `${Math.round(n)} ‚Ç¨`;
  }

  function computeTotalIfPossible(s, e){
    try{
      const calc = lodgingTotal(s, e);
      const lodging = calc.total;
      const total = lodging + CLEANING_FEE;
      const nights = calc.nights;
      return { nights, lodging, cleaning: CLEANING_FEE, total };
    }catch{
      return null;
    }
  }

  function openMail({subject, body}){
    const mailto =
      `mailto:${encodeURIComponent(DEST_EMAIL)}`
      + `?subject=${encodeURIComponent(subject)}`
      + `&body=${encodeURIComponent(body)}`;
    window.location.href = mailto;
  }

  // ‚úÖ Form "Question"
  document.getElementById('questionForm').addEventListener('submit', (e)=>{
    e.preventDefault();

    const name = (document.getElementById('qname')?.value || "").trim();
    const email = (document.getElementById('qemail')?.value || "").trim();
    const message = (document.getElementById('qmessage')?.value || "").trim();

    if(!name || !email) return;

    const subject = `Les Cistes ‚Äî Question de ${name}`;

    let body = "";
    body += "Bonjour,\n\n";
    body += "Je souhaite poser une question :\n\n";
    body += "=== Coordonn√©es ===\n";
    body += `Nom : ${name}\n`;
    body += `Email : ${email}\n\n`;
    body += "=== Question ===\n";
    body += (message ? message : "(aucun message)") + "\n\n";
    body += "‚Äî\nEnvoy√© depuis la page Contact (Les Cistes)\n";

    openMail({subject, body});
  });

  // ‚úÖ Form "R√©servation"
  document.getElementById('reservationForm').addEventListener('submit', (e)=>{
    e.preventDefault();

    const name = (document.getElementById('name')?.value || "").trim();
    const email = (document.getElementById('email')?.value || "").trim();
    const message = (document.getElementById('message')?.value || "").trim();

    const sVal = arriveeInput.value;
    const eVal = departInput.value;

    arriveeTip.textContent = '';
    departTip.textContent = '';

    let ok = true;

    if (!sVal) { arriveeTip.textContent = "Choisissez une date d'arriv√©e."; ok = false; }
    if (!eVal) { departTip.textContent = "Choisissez une date de d√©part."; ok = false; }

    if (sVal && eVal && eVal <= sVal) {
      departTip.textContent = "La date de d√©part doit √™tre apr√®s l'arriv√©e.";
      ok = false;
    }

    if (!name || !email) ok = false;

    if (ok && sVal && eVal) {
      const s = parseISO(sVal);
      const end = parseISO(eVal);

      const nights = nightsBetween(s, end);
      const required = requiredMinNightsForStay(s, end);

      if (nights < required) {
        departTip.textContent = `S√©jour minimum : ${required} nuits.`;
        ok = false;
      } else if (crossesBlocked(sVal, eVal)) {
        departTip.textContent = "La p√©riode choisie traverse des dates indisponibles.";
        ok = false;
      }
    }

    if(!ok) return;

    const subject = `Les Cistes ‚Äî Demande de r√©servation de ${name}`;

    let body = "";
    body += "Bonjour,\n\n";
    body += "Je souhaite faire une demande de r√©servation :\n\n";

    body += "=== Coordonn√©es ===\n";
    body += `Nom : ${name}\n`;
    body += `Email : ${email}\n\n`;

    body += "=== S√©jour ===\n";
    body += `Arriv√©e : ${sVal || "(non renseign√©e)"}\n`;
    body += `D√©part : ${eVal || "(non renseign√©e)"}\n`;

    if (sVal && eVal) {
      const totals = computeTotalIfPossible(parseISO(sVal), parseISO(eVal));
      if (totals) {
        body += `Nuits : ${totals.nights}\n`;
        body += `H√©bergement : ${euro(totals.lodging)}\n`;
        body += `Forfait m√©nage : ${euro(totals.cleaning)}\n`;
        body += `TOTAL : ${euro(totals.total)}\n`;
      }
    }
    body += "\n";

    body += "=== Message ===\n";
    body += (message ? message : "(aucun message)") + "\n\n";
    body += "‚Äî\nEnvoy√© depuis la page Contact (Les Cistes)\n";

    openMail({subject, body});
  });
</script>
</body>
